# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3001
FRONTEND_URL=https://your-frontend-domain.onrender.com

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/copytradepro
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Options Trading Configuration
UPSTOX_API_KEY=your-upstox-api-key
UPSTOX_API_SECRET=your-upstox-api-secret
UPSTOX_REDIRECT_URI=http://localhost:3001/api/options/upstox/callback

# TIQS API Configuration (Backup)
TIQS_APP_ID=your-tiqs-app-id
TIQS_TOKEN=your-tiqs-token

# Options Data Settings
OPTIONS_DATA_REFRESH_TIME=08:00
OPTIONS_CLEANUP_EXPIRED=true
OPTIONS_MAX_EXPIRY_DAYS=90

# Broker API Configuration
# Shoonya Broker
SHOONYA_VENDOR_CODE=your-vendor-code
SHOONYA_IMEI=your-imei
SHOONYA_API_KEY=your-api-key
SHOONYA_AUTH_TOKEN=your-auth-token

# Fyers Broker
FYERS_CLIENT_ID=your-client-id
FYERS_SECRET_KEY=your-secret-key
FYERS_REDIRECT_URI=https://your-backend-domain.onrender.com/api/broker/fyers/callback

# Push Notifications (VAPID Keys)
# Generate these using: POST /api/notifications/generate-vapid-keys (development only)
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_EMAIL=mailto:your-email@domain.com

# Logging Configuration
ENABLE_FILE_LOGGING=true
ENABLE_DATABASE_LOGGING=true
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.onrender.com,https://your-custom-domain.com

# Broker API Configuration (for future use)
# ZERODHA_API_KEY=your-zerodha-api-key
# ZERODHA_API_SECRET=your-zerodha-api-secret
# ANGEL_API_KEY=your-angel-api-key
# ANGEL_API_SECRET=your-angel-api-secret

# --- Search Ranking Weights (tune without code changes) ---
# Exact match weights
SEARCH_WEIGHT_EXACT_TS=200
SEARCH_WEIGHT_EXACT_DN=180
SEARCH_WEIGHT_EXACT_UNDER=160
# Prefix match weights
SEARCH_WEIGHT_PREFIX_TS=100
SEARCH_WEIGHT_PREFIX_DN=90
SEARCH_WEIGHT_PREFIX_UNDER=80
# Partial match weights
SEARCH_WEIGHT_PARTIAL_TS=70
SEARCH_WEIGHT_PARTIAL_DN=60
SEARCH_WEIGHT_PARTIAL_CN=50
# Generic bonuses
SEARCH_WEIGHT_BONUS_ACTIVE=10
SEARCH_WEIGHT_BONUS_EQUITY=5
# Derivative-specific boosts
SEARCH_WEIGHT_OPTION_UNDER_PREFIX=15
SEARCH_WEIGHT_FUTURE_UNDER_PREFIX=10
SEARCH_WEIGHT_OPTION_TS_PREFIX=10
