{
  "name": "copytrade-backend",
  "version": "1.0.1",
  "description": "CopyTrade Pro backend application",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc && npm run copy-env",
    "copy-env": "node scripts/copy-env.js",
    "dev": "nodemon",
    "start": "node dist/index.js",
    "clean": "rm -rf dist coverage .nyc_output *.log",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "reset": "npm run clean:all && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "health-check": "node scripts/health-check.js",

    "monitoring:start": "node -e \"require('./dist/services/productionMonitoringService').productionMonitoringService.start()\"",
    "monitoring:stop": "node -e \"require('./dist/services/productionMonitoringService').productionMonitoringService.stop()\"",
    "kill-port": "lsof -ti:3001 | xargs kill -9 || echo 'Port 3001 is free'",
    "dev:clean": "npm run kill-port && npm run dev",
    "db:schema": "node scripts/create-database-schema.js",
    "db:init": "node dist/scripts/initializeSymbolDatabase.js",
    "env:create": "node scripts/manage-environment.js --create",
    "env:validate": "node scripts/manage-environment.js --validate",
    "env:show": "node scripts/manage-environment.js --show",
    "env:backup": "node scripts/manage-environment.js --backup",
    "health-check:deployment": "node scripts/deployment-health-check.js",
    "validate:deployment": "node scripts/validate-deployment.js"
  },
  "dependencies": {
    "@copytrade/broker-fyers": "file:../dev-packages/broker-fyers",
    "@copytrade/broker-shoonya": "file:../dev-packages/broker-shoonya",
    "@copytrade/shared-types": "file:../dev-packages/shared-types",
    "@copytrade/unified-broker": "file:../dev-packages/unified-broker",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.1.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "fyers-api-v3": "^1.4.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "make-error": "^1.3.6",
    "mongoose": "^8.16.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "otplib": "^12.0.1",
    "socket.io": "^4.8.1",
    "ts-jest": "^29.4.0",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "jest": "^30.0.4",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/tests/**",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
