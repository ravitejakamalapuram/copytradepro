{
  "name": "copytrade-pro",
  "version": "1.0.0",
  "description": "Professional trading application with multi-broker support",
  "private": true,
  "scripts": {
    "setup": "node setup.js",
    "install": "npm run install:all",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "build": "node build.js",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "copy:frontend": "mkdir -p backend/public && cp -r frontend/dist/* backend/public/",
    "start": "cd backend && npm start",
    "dev": "node start-dev.js",
    "dev:simple": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "clean": "rm -rf backend/dist frontend/dist backend/public",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "trading",
    "broker",
    "fintech",
    "react",
    "nodejs",
    "typescript"
  ],
  "author": "Raviteja Kamalapuram",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "node-cron": "^4.1.1"
  }
}
