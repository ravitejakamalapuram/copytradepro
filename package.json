{
  "name": "copytrade-pro",
  "version": "1.0.0",
  "description": "Professional trading application with multi-broker support",
  "private": true,
  "scripts": {
    "build": "./build.sh",
    "start": "cd backend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "npm run check:deps && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:force": "npm run install:deps && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:deps": "bash install-deps.sh || npm run install:all",
    "check:deps": "bash check-deps.sh || npm run install:all",
    "setup": "bash setup.sh || npm run install:all",

    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "clean": "rm -rf backend/dist frontend/dist backend/public packages/*/dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:packages": "npm run build --workspace=packages/unified-broker",
    "publish:unified-broker": "cd packages/unified-broker && npm publish",
    "test:packages": "npm run test --workspace=packages/unified-broker"
  },
  "keywords": [
    "trading",
    "broker",
    "fintech",
    "react",
    "nodejs",
    "typescript"
  ],
  "author": "Raviteja Kamalapuram",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "packages/*",
    "backend",
    "frontend"
  ],
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "node-cron": "^4.1.1"
  }
}
